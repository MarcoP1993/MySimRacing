<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingEnd="15dp">

    <TextView
        android:id="@+id/txt_sanc_piloto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audiowide"
        android:text="Piloto"
        android:textAllCaps="true"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txt_sanc_equipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audiowide"
        android:text="Equipo"
        android:textAllCaps="true"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txt_sanc_sala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audiowide"
        android:text="Sala"
        android:textAllCaps="true"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txt_tpo_sancion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audiowide"
        android:text="Tpo. Sancion"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textColor="@color/ic_btn_add_background"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt_sanc_circ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audiowide"
        android:text="Circuito"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txt_desc_sanc"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:fontFamily="@font/audiowide"
        android:text="Descripcion"
        android:textAllCaps="true"
        android:textColor="@color/black" />

</LinearLayout>